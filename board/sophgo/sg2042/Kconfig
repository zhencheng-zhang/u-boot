if TARGET_SOPHGO_SG2042

config ARCH_SOPHGO
	bool
	default y

config SYS_BOARD
	default "sg2042"

config SYS_VENDOR
	default "sophgo"

config SYS_CPU
	default "generic"

config SYS_CONFIG_NAME
	default "sophgo-sg2042"

config TEXT_BASE
	default 0x80200000 if SPL
	default 0x00200000 if !RISCV_SMODE
	default 0x20200000 if RISCV_SMODE

config SPL_TEXT_BASE
	default 0x08000000

config SPL_OPENSBI_LOAD_ADDR
	default 0x80000000

config BOARD_SPECIFIC_OPTIONS
	def_bool y
	select ARCH_EARLY_INIT_R
	imply CPU
	imply CPU_RISCV
	imply RISCV_TIMER if RISCV_SMODE
	imply CMD_CPU
	imply SMP
	imply SUPPORT_OF_CONTROL
	imply OF_CONTROL
	imply OF_REAL

endif
